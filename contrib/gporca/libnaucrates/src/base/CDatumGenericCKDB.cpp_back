BOOL
CDatumGenericCKDB::IsDatumMappableToDouble() const
{
	return CMDTypeGenericCKDB::HasByte2DoubleMapping(this->MDId());
}

//---------------------------------------------------------------------------
//	@function:
//		CDatumGenericCKDB::IsDatumMappableToLINT
//
//	@doc:
//		For statistics computation, can this datum be mapped to a LINT
//
//---------------------------------------------------------------------------
BOOL
CDatumGenericCKDB::IsDatumMappableToLINT() const
{
	if (NULL == m_cached_type)
	{
		m_cached_type = COptCtxt::PoctxtFromTLS()->Pmda()->RetrieveType(MDId());
	}
	return CMDTypeGenericCKDB::HasByte2IntMapping(m_cached_type);
}

