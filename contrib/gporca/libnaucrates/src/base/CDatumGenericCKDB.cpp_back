// selectivities needed for LIKE predicate statistics evaluation
const CDouble CDatumGenericCKDB::DefaultFixedCharSelectivity(0.20);
const CDouble CDatumGenericCKDB::DefaultCharRangeSelectivity(0.25);
const CDouble CDatumGenericCKDB::DefaultAnyCharSelectivity(0.99);
const CDouble CDatumGenericCKDB::DefaultCdbRanchorSelectivity(0.95);
const CDouble CDatumGenericCKDB::DefaultCdbRolloffSelectivity(0.14);

//---------------------------------------------------------------------------
//	@function:
//		CDatumGenericCKDB::CDatumGenericCKDB
//
//	@doc:
//		Ctor
//
//---------------------------------------------------------------------------
CDatumGenericCKDB::CDatumGenericCKDB(CMemoryPool *mp, IMDId *mdid,
									 INT type_modifier, const void *src,
									 ULONG size, BOOL is_null,
									 LINT stats_comp_val_int,
									 CDouble stats_comp_val_double)
	: m_mp(mp),
	  m_size(size),
	  m_bytearray_value(NULL),
	  m_is_null(is_null),
	  m_mdid(mdid),
	  m_type_modifier(type_modifier),
	  m_cached_type(NULL),
	  m_stats_comp_val_int(stats_comp_val_int),
	  m_stats_comp_val_double(stats_comp_val_double)
{
	GPOS_ASSERT(NULL != mp);
	GPOS_ASSERT(mdid->IsValid());

	if (!IsNull())
	{
		GPOS_ASSERT(0 < size);

		m_bytearray_value = GPOS_NEW_ARRAY(m_mp, BYTE, size);
		(void) clib::Memcpy(m_bytearray_value, src, size);
	}
}


//---------------------------------------------------------------------------
//	@function:
//		CDatumGenericCKDB::~CDatumGenericCKDB
//
//	@doc:
//		Dtor
//
//---------------------------------------------------------------------------
CDatumGenericCKDB::~CDatumGenericCKDB()
{
	GPOS_DELETE_ARRAY(m_bytearray_value);
	m_mdid->Release();
}

